@model EditModel

<div class="card mt-3">
    <h5 class="card-header">Consent Screen</h5>
    <div class="card-body">
        <!--Checkbox-->
        <div class="form-group row">
            <label asp-for="Client.RequireConsent" class="col-sm-3 col-form-label form-check-label">
                Require Consent
            </label>
            <div class="col-sm-9">
                <toggle-button>
                    <input asp-for="Client.RequireConsent" type="checkbox" class="form-check-input">
                </toggle-button>
            </div>
        </div>

        <!--Input - text -->
        <div class="form-group row">
            <label asp-for="Client.ClientUri" class="col-sm-3 col-form-label">
                Client Uri
            </label>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="Client.ClientUri">
            </div>
        </div>

        <!--Input - text -->
        <div class="form-group row">
            <label asp-for="Client.LogoUri" class="col-sm-3 col-form-label">
                Logo Uri
            </label>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="Client.LogoUri">
            </div>
        </div>
    </div>
</div>
