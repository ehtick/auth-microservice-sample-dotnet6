@using Auth.Admin.Models
@model EditModel

<div class="card mt-3">
    <h5 class="card-header">Name</h5>
    <div class="card-body">

        <!--Input - text -->
        <div class="form-group row">
            <label asp-for="Client.ClientId" class="col-sm-3 col-form-label">
                Client ID
            </label>
            <div class="col-sm-9">
                <input type="text" required class="form-control" asp-for="Client.ClientId">
                <span asp-validation-for="Client.ClientId" class="text-danger"></span>
            </div>
        </div>

        <!--Input - text -->
        <div class="form-group row">
            <label asp-for="Client.ClientName" class="col-sm-3 col-form-label">
                Client Name
            </label>
            <div class="col-sm-9">
                <input type="text" required class="form-control" asp-for="Client.ClientName">
                <span asp-validation-for="Client.ClientName" class="text-danger"></span>
            </div>
        </div>

        @if (!Model!.Id.HasValue)
        {
            <div class="row row-cols-2 row-cols-md-3 g-4 mt-3 text-center">
                <div class="col">
                    <div class="card box-shadow">
                        <div class="card-body">
                            <label class="radio-img">
                                <input type="radio" asp-for="Client.ClientType" checked="checked" value="@((int)ClientType.Empty)"/>
                                <i class="fas fa-file"></i>
                                <span>Empty</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card box-shadow">
                        <div class="card-body">
                            <label class="radio-img">
                                <input type="radio" asp-for="Client.ClientType" value="@((int)ClientType.Spa)"/>
                                <i class="fas fa-laptop"></i>
                                <span>SPA / Code</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card box-shadow">
                        <div class="card-body">
                            <label class="radio-img">
                                <input type="radio" asp-for="Client.ClientType" value="@((int)ClientType.WebHybrid)"/>
                                <i class="fas fa-file-code"></i>
                                <span>Web / Hybrid</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card box-shadow">
                        <div class="card-body">
                            <label class="radio-img">
                                <input type="radio" asp-for="Client.ClientType" value="@((int)ClientType.Device)" />
                                <i class="fas fa-phone"></i>
                                <span>Device</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card box-shadow">
                        <div class="card-body">
                            <label class="radio-img">
                                <input type="radio" asp-for="Client.ClientType" value="@((int) ClientType.Native)" />
                                <i class="fas fa-tv"></i>
                                <span>Native / Hybrid</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card box-shadow">
                        <div class="card-body">
                            <label class="radio-img">
                                <input type="radio" asp-for="Client.ClientType" value="@((int)ClientType.Machine)" />
                                <i class="fas fa-server"></i>
                                <span>Machine</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
